{
  "name": "simple-reason-boilerplate",
  "version": "0.1.0",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "__tests__",
      "type": "dev"
    }
  ],
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "suffix": ".bs.js",
  "refmt": 3,
  "bsc-flags": ["-bs-no-version-header", "-bs-super-errors"],
  "reason": { "react-jsx": 2 },
  "bs-dependencies": ["reason-react", "bs-director"],
  "bs-dev-dependencies": ["bs-jest"]
}
